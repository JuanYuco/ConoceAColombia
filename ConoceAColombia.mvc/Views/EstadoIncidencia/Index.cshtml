@model List<ConoceAColombia.mvc.Models.EstadoIncidencia>
@{
    ViewBag.Title = "Index";
}


<script src="~/Scripts/views/EstadoIncidencia.js"></script>
<h2>Estado Incidencia</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary btn-sm" })
</p>

<input type="text" id="myInput" onkeyup="filtroBusqueda()" placeholder="Filtro de busqueda"
       class="form-control" />
<br />

<table id="myTable" class="table table-bordered">
    <tr class="header">
        <th style="width:70%">
            @Html.DisplayNameFor(model => model[0].stDescripcion)
        </th>
        <th style="width:30%">Opciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.stDescripcion</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {  id = item.inId }, new { @class = "btn btn-primary btn-sm" }) |
                @Html.ActionLink("Detalle", "Details", new { id = item.inId }, new { @class = "btn btn-primary btn-sm" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.inId }, new { @class = "btn btn-primary btn-sm" })
            </td>
        </tr>
    }

</table>